Larch = Ember.Namespace.create()

Ember.Application.initializer
  name: 'larchInitalizer'
  after: 'barbecueInitializer'

  initialize: (container,application) ->
    # FYI: store = container.lookup('store:main')
    # FYI: adapter = container.lookup('adapter:application')
    container.register 'component:larch-tree', Larch.TreeComponent
    container.register 'controller:tree_node', Larch.TreeNodeController
    container.register 'controller:children', Larch.ChildrenController
    container.register 'view:tree-node', Larch.TreeNodeView
    console.debug 'Larch <%= Larch::VERSION %>'


window.Larch = Larch
